{
  "$id": "https://ns.adobe.com/helix/pipeline/context",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Context",
  "type": "object",
  "description": "The context thingie.",
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "string",
      "description": "An error message that has been generated during pipeline processing"
    },
    "content": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sources": {
          "type": "array",
          "description": "List of URIs that have been retrieved for this piece of content",
          "items": {
            "type":"string",
            "format": "uri"
          }
        },
        "body": {
          "type": "string",
          "description": "The content body of the retrieved source document"
        }
      }
    }
  }
}